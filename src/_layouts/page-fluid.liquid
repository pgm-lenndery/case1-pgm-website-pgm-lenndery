---
layout: default
permalink: "/{{ page.filePathStem | remove: '_pages' | replace: ' ', '-'  }}/index.html"
---
<main>
    <section>
        <div class="container-fluid py-5 box-b">
            <div class="row">
                <div class="col-12 col-md-8">
                    <h1 class="font-rhode modal-title display-4">{{ title }}</h1>
                </div>
                <div class="col-12">
                    <p class="mb-0 text-modern">{{ subtitle }}</p>
                </div>
            </div>
        </div>
    </section>
    <section id="mainContent" class="{% if contentstyle == 'ignore' %}contentstyle-ignore{% endif %}">
        <div class="container-fluid mt-8 mb-5">
            <div class="row flex-column-reverse flex-lg-row">
                <div class="col-12">
                    {{ content }}
                </div>
                <div class=" d-none" id="pageIndex" class="pageindex">
                    
                </div>
            </div>
        </div>
    </section>
    <div id="loader">
    </div>
    <style>
        #loader {
            position: absolute;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
            /* width: 100vw;
            height: 100vh; */
            background-color: black;
            z-index: 7;
        }
        
        .modal #loader {
            display: none;
        }
    </style>
</main>
{% include modal-page %}